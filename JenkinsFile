pipeline {
  agent any

  stages {
    stage('Clone') {
      steps {
        echo 'Cloning repository...'
      }
    }

    stage('Install dependencies') {
      steps {
        bat 'npm install'
      }
    }

    stage('Run tests') {
      steps {
        bat 'npm test' // Change if you donâ€™t have tests
      }
    }

    stage('Build') {
      steps {
        bat 'npm run build' // Optional, only if you have a build script
      }
    }
  }
}
