pipeline {
    agent any

    tools {
        nodejs "Node 18"
    }

    stages {
        stage('Clone Code') {
            steps {
                git 'https://github.com/your-username/your-repo.git' 
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Start App') {
            steps {
                sh 'npm start &'
            }
        }
    }
}
