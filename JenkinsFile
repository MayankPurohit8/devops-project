pipeline {
    agent any

    tools {
        nodejs "Node 18" // Make sure this matches the name you gave in Global Tool Configuration
    }

    stages {
        stage('Clone Code') {
            steps {
               git branch: 'main', url: 'https://github.com/MayankPurohit8/devops-project.git'

 // replace with your real repo
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        stage('Start App') {
            steps {
                sh 'npm start &'
            }
        }
    }
}
